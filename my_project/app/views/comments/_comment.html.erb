<div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
  <div class="flex items-start justify-between mb-2">
    <div class="flex items-center">
      <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white font-semibold mr-3">
        <%= comment.user.author_name[0].upcase %>
      </div>
      <div>
        <p class="font-semibold text-gray-900"><%= comment.user.author_name %></p>
        <p class="text-xs text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</p>
      </div>
    </div>
    <%= button_to post_comment_path(comment.post, comment), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800" do %>
      Delete
    <% end %>
  </div>
  <p class="text-gray-700 ml-11"><%= comment.content %></p>
</div>