<div class="post">
  <h2><%= link_to post.title, post %></h2>
  <p class="author">By: <%= post.user.author_name %></p>
  <p class="post-body"><%= truncate(post.body, length: 200) %></p>
  <p class="post-meta">
    <% if post.published_at %>
      Published <%= time_ago_in_words(post.published_at) %> ago
    <% else %>
      Not published
    <% end %>
  </p>
  <div class="post-actions">
    <%= link_to 'Show', post %> |
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Delete', post, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </div>
</div>
