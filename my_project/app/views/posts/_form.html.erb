<%= form_with(model: post, class: 'space-y-6', data: { controller: "form", action: "turbo:submit-start->form#disableSubmit" }) do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h2 class="text-red-800 font-semibold mb-2"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul class="list-disc list-inside text-red-700">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :user_id, "Author", class: 'block text-sm font-medium text-gray-700 mb-1' %>
    <%= form.collection_select :user_id, User.all, :id, :name, { prompt: 'Select an author' }, { class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500' } %>
  </div>

  <div>
    <%= form.label :title, class: 'block text-sm font-medium text-gray-700 mb-1' %>
    <%= form.text_field :title, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500', placeholder: 'Enter post title' %>
  </div>

  <div>
    <%= form.label :body, class: 'block text-sm font-medium text-gray-700 mb-1' %>
    <%= form.text_area :body, rows: 10, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500', placeholder: 'Write your post content...' %>
  </div>

  <div>
    <%= form.label :published_at, "Publish Date", class: 'block text-sm font-medium text-gray-700 mb-1' %>
    <%= form.datetime_field :published_at, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500' %>
  </div>
  
  <div>
    <%= form.submit data: { form_target: "submit" }, class: 'w-full px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg cursor-pointer' %>
  </div>
<% end %>