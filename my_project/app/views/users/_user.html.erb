<tr id="<%= dom_id(user) %>">
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm font-medium text-gray-900"><%= user.name %></div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm text-gray-900"><%= user.email %></div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= user.role == 'admin' ? 'purple' : 'green' %>-100 text-<%= user.role == 'admin' ? 'purple' : 'green' %>-800">
      <%= user.role %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
    <div class="flex gap-2">
      <%= link_to 'View', user, data: { turbo_frame: "_top" }, class: 'text-blue-600 hover:text-blue-900' %>
      <%= link_to 'Edit', edit_user_path(user), data: { turbo_frame: "users" }, class: 'text-yellow-600 hover:text-yellow-900' %>
      <%= button_to 'Delete', user, method: :delete, class: 'text-red-600 hover:text-red-900 border-0 bg-transparent cursor-pointer p-0' %>
    </div>
  </td>
</tr>