<div class="max-w-2xl mx-auto">
  <div class="mb-4">
    <%= link_to users_path, class: 'text-gray-600 hover:text-gray-900' do %>
      ‚Üê Back to Users
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">User Details</h1>

    <div class="space-y-4">
      <div class="border-b border-gray-200 pb-4">
        <p class="text-sm text-gray-500">Name</p>
        <p class="text-lg font-semibold text-gray-900"><%= @user.name %></p>
      </div>
      <div class="border-b border-gray-200 pb-4">
        <p class="text-sm text-gray-500">Email</p>
        <p class="text-lg text-gray-900"><%= @user.email %></p>
      </div>
      <div class="border-b border-gray-200 pb-4">
        <p class="text-sm text-gray-500">Role</p>
        <p class="text-lg text-gray-900"><span class="px-2 py-1 bg-blue-100 text-blue-800 rounded"><%= @user.role %></span></p>
      </div>
      <div>
        <p class="text-sm text-gray-500">Member Since</p>
        <p class="text-lg text-gray-900"><%= @user.created_at.strftime("%B %d, %Y") %></p>
      </div>
    </div>

    <div class="mt-8 flex gap-3">
      <%= link_to "Edit", edit_user_path(@user), class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg" %>
      <%= link_to "Delete", user_path(@user), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg" %>
    </div>
  </div>
</div>
